@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme Sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="UserCommentId" />
                        <input type="hidden" class="form-control" asp-for="ProductId" />
                        <input type="text" disabled class="form-control" asp-for="ProductId" />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" class="form-control" asp-for="NameSurname" />
                        <label>Kullanıcı Resim</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <label>Rating</label>
                        <input type="number" class="form-control" asp-for="Rating" />
                        <label>Tarih</label>
                        <input type="date" class="form-control" asp-for="CreatedDate" />
                        <label>Yorum</label>
                        <textarea rows="3" class="form-control" asp-for="CommentDetail"></textarea>
                        <br />
                        <button class="btn btn-primary">Yorumu Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>


