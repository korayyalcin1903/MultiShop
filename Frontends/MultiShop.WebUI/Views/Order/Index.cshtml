@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
        <form method="post">
        <div class="row px-xl-5">
                @* @await Component.InvokeAsync("_OrderDetailComponentPartial") *@
                <div class="col-lg-8">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş ve teslimat fatura adresi</span></h5>
                    <div class="bg-light p-30 mb-5">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Adınız</label>
                                <input class="form-control" type="text" placeholder="Adınız" asp-for="Name">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Soyad</label>
                                <input class="form-control" type="text" placeholder="Soyadınız" asp-for="Surname">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input class="form-control" type="email" placeholder="Email" asp-for="Email">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Telefon Numarası</label>
                                <input class="form-control" type="number" placeholder="Telefon Numarası" asp-for="Phone">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Adres satır 1</label>
                                <input class="form-control" type="text" placeholder="123 Mahallesi" asp-for="Detail1">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Adres satır 2</label>
                                <input class="form-control" type="text" placeholder="123 Sokak" asp-for="Detail2">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Ülke</label>
                                <input class="form-control" type="text" placeholder="Türkiye" asp-for="Country">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Şehir</label>
                                <input class="form-control" type="text" placeholder="Istanbul" asp-for="City">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>ilçe</label>
                                <input class="form-control" type="text" placeholder="Pendik" asp-for="Disctrict">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>ZIP Code</label>
                                <input class="form-control" type="text" placeholder="123" asp-for="ZipCode">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                @await Component.InvokeAsync("_OrderSummaryComponentPartial")
                @await Component.InvokeAsync("_PaymentMethodComponentPartial")
                        
                </div>     
            </div>
        </form>
</div>

